# ============================================
# Налаштування кешування для статичних ресурсів
# ============================================

# Увімкнути модуль expires
<IfModule mod_expires.c>
    ExpiresActive On
    
    # Зображення - кешувати на 1 рік (31536000 секунд)
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType image/x-icon "access plus 1 year"
    
    # CSS файли - кешувати на 1 рік
    ExpiresByType text/css "access plus 1 year"
    
    # JavaScript файли - кешувати на 1 рік
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType text/javascript "access plus 1 year"
    
    # Шрифти - кешувати на 1 рік
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"
    ExpiresByType font/otf "access plus 1 year"
    ExpiresByType application/vnd.ms-fontobject "access plus 1 year"
    
    # PDF файли - кешувати на 1 місяць
    ExpiresByType application/pdf "access plus 1 month"
    
    # HTML файли - кешувати на 1 день (для можливості оновлення контенту)
    ExpiresByType text/html "access plus 1 day"
</IfModule>

# ============================================
# Cache-Control заголовки (альтернатива для mod_expires)
# ============================================

<IfModule mod_headers.c>
    # Зображення - кешувати на 1 рік
    <FilesMatch "\.(webp|jpg|jpeg|png|gif|svg|ico)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # CSS файли - кешувати на 1 рік
    <FilesMatch "\.css$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # JavaScript файли - кешувати на 1 рік
    <FilesMatch "\.(js)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # Шрифти - кешувати на 1 рік
    <FilesMatch "\.(woff|woff2|ttf|otf|eot)$">
        Header set Cache-Control "max-age=31536000, public, immutable"
    </FilesMatch>
    
    # PDF файли - кешувати на 1 місяць
    <FilesMatch "\.pdf$">
        Header set Cache-Control "max-age=2592000, public"
    </FilesMatch>
    
    # HTML файли - кешувати на 1 день
    <FilesMatch "\.html$">
        Header set Cache-Control "max-age=86400, public, must-revalidate"
    </FilesMatch>
</IfModule>

# ============================================
# Додаткові оптимізації
# ============================================

# Увімкнути компресію для текстових файлів
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

# Встановити ETag для кращого кешування
FileETag MTime Size
